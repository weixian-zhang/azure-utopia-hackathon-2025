{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "streamlit run",
            "type": "shell",
            "command": "streamlit run main.py",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "acr build backend",
            "type": "shell",
            "command": "az acr build --image acrcpfhackthon.azurecr.io/backend:v0.0.1 --registry acrcpfhackthon --file ./backend/Dockerfile ./backend",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        }
    ]
}